#products
  - row_count = 0
  - @products.each_slice(3) do |row|
    - row_index = "row_#{row_count}"
    .row{:id => row_index}
      - row.each do |product|
        = render :partial => 'shared/product-thumbnail', :locals => {:product => product, :row_index => row_index}
      - row_count += 1
