.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Shopify Demo App', '/', :class => 'brand'
      - if current_shop
        .nav-collapse
          %ul.nav
            <li class='#{active_nav_class('home', 'index')}'>#{link_to 'Where to Start', '/'}
            <li class='#{active_nav_class('home', 'design')}'>#{link_to 'Bootstrap Info', '/design'}
        %ul.nav.pull-right
          %li.dropdown
            = link_to raw(current_shop.url+' <b class="caret"></b>'), "https://#{current_shop.url}", :class => 'shop_name dropdown-toggle', :'data-toggle' => 'dropdown'
            %ul.dropdown-menu
              %li= link_to raw('<i class="icon-home"></i> Storefront'), "http://"+current_shop.url, :target => 'blank'
              %li= link_to raw('<i class="icon-cog"></i> Shopify Admin'), "http://"+current_shop.url+"/admin", :target => 'blank'
              %li.divider
              %li= link_to raw('<i class="icon-off"></i> logout'), logout_path
