.inner.product-row.clearfloat
  %a.product-thumb{:data => product.handle, :href => "#"}
    - if product.images.size > 0 && product.images.first.large
      %img{:alt => product.title, :src => product.images.first.large}            
      %span
        = product.images.first.large
        
.details.clearfix
  %a{:data => product.handle, :href => "#"}
    %span.title= product.title
