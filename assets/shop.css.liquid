body {
  color:{{ settings.text_color }};
  font-size:13px;
  line-height:24px;
  font-family:{{ settings.regular_font }};
}

{% if settings.use_custom_bg_image %}
  body {
	background:{{ settings.shop_bg_color }} url('{{ 'custom_bg.png' | asset_url }}') repeat fixed;
  }
{% else %}
  body {
	background:{{ settings.shop_bg_color }} none repeat fixed; background-image:none;
  }
{% endif %}

h1,h2,h3,h4,h5,h6 {
  font-weight:{{ settings.header_weight }};
  font-family:{{ settings.websafe_font }};
  color:{{ settings.header_color }};
  margin:0 0 13px 0;
  text-transform:{{ settings.header_font_style }};
}

{% if settings.typeface_method == "google_webfonts" %}
  h1,h2,h3,h4,h5,h6 {
    font-family: {{ settings.google_webfont_font | replace: '+', ' ' }};
  }
{% endif %}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  color: {{ settings.header_color }};
}

a {
  color:{{ settings.link_color }};
  text-decoration:none;
  outline:none;
}
a:hover {
  text-decoration:none;
  color:{{ settings.link_hover_color }};
}
a:active {
  outline:none;
}

h1 {
  font-size:48px;
}
h2 {
  font-size:32px;
}
h3 {
  font-size:24px;
}
h4 {
  font-size:20px;
}
h5 {
