<header>
<div class="inner clearfloat">
  <nav class="clearfloat">
    <span class="three column logo"><a href="{{ shop.url }}">THREE OVER ONE</a></span>
    <span class="three column section s2">
        {% case template %}
          {% when 'index' %}
              HOME
          {% when 'product' %}
             .
          {% else %}
            SHOP
        {% endcase %}
