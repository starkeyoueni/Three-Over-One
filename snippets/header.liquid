		<div id="shop-nav-main">
			<ul>
			{% for product_type in collection.all_types %}
			<li class="{{ product_type | handleize }}">
			{{ product_type | link_to_type }}
			</li>
			{% endfor %}
			</ul>Â¨
		</div>
	</div>
  </nav>
</div>  
