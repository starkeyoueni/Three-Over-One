 <style>
    #front-page-slides {
         width: 100%;
         height: 100%;
         min-height: 480px;
         background: #eee;
         position: absolute;
         top: 0px;
    }
    
    #front-page-slides ul {
        list-style: none;
        padding: 0px;
        margin: 0px;
    }
    
    #slide-show-nav {
        width: 400px;
        height: 24px;
        background: #333;
        position: absolute;
        bottom: 0px;
        left: 0px;
        right: 0px;
        margin: auto !important;
        z-index: 2;
        text-align: center;
    }
    
    #slide-show-nav li { 
        display: inline-block;
        width: 20px;
        height: 20px;
        background: #fff;
        margin: 0px 5px;
    }
    
    #slide-show {
         width: 100%;
         height: 100%;
         background: #222;
         overflow: hidden;
         overflow-x: scroll;
         position: relative;
         min-width: 960px;
         margin: 0px auto;
    }
    
    #slide-show .slide-content {
        width: 400px;
        height: 100px;
        background: #000;
        opacity: 0.3;
        top: 98px;
        left: 40px;
        z-index: 2;
        position: absolute;
    }
    
    #slide-show ul {
        position: absolute;
        width: 300%;
        height: 100%;
        background: #aaa;
    }
    
    #slide-show ul li {
        float: left;
        height: 100%;
        width: 33.33%;
        background: #eee;
        overflow: hidden;
        position: relative;
    }

    #slide-show ul li img {
        position: absolute;
        width: 100%;
        min-width: 960px;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
        margin: auto;
    }
    
 </style>
 
 <div id="front-page-slides">
